
@model List<Category>

<div class="shadow border-0 p-3 mt-2">



    <div class="row mb-3">
        <div class="col-6">
            <h1 class="text-center text-light">Category List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle-fill"></i> Create New Category</a>
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr class="text-center">
                <th class="p-3 text-light">Category Name</th>
                <th class="p-3 text-light">Display Order</th>
                <th class="p-3 text-light">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(o => o.DisplayOrder))
            {
                <tr class="text-center">
                    <td>@(item.CategoryName)</td>
                    <td>@item.DisplayOrder</td>
                    <td>
                       
                            <a asp-controller="Category" asp-action="Update" asp-route-id="@item.Id" class="btn btn-md btn-primary"><i class="bi bi-pencil-square"></i> Update</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"  class="btn btn-md btn-danger"><i class="bi bi-trash-fill"></i> Delete</a>
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>