@model Product


<div class="card mb-3 shadow border-0">
    <h1 class="card-header bg-info bg-gradient m-lg-0 py-3 text-center">Update Product</h1>
    <div class="card-body">
        <form method="post">
            <input hidden asp-for="Id" class="form-control" />
            <div class="mb-2">
                <label asp-for="Title" class="form-text text-dark"></label>
                <input asp-for="Title" class="form-control" />
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Description" class="form-text text-dark"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Auther" class="form-text text-dark"></label>
                <input asp-for="Auther" class="form-control" />
                <span class="text-danger" asp-validation-for="Auther"></span>
            </div>
            <div class="mb-2">
                <label asp-for="ISBN" class="form-text text-dark"></label>
                <input asp-for="ISBN" class="form-control" />
                <span class="text-danger" asp-validation-for="ISBN"></span>
            </div>
            <div class="mb-2">
                <label asp-for="ListPrice" class="form-text text-dark"></label>
                <input asp-for="ListPrice" class="form-control" />
                <span class="text-danger" asp-validation-for="ListPrice"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Price" class="form-text text-dark"></label>
                <input asp-for="Price" class="form-control" />
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Price50" class="form-text text-dark"></label>
                <input asp-for="Price50" class="form-control" />
                <span class="text-danger" asp-validation-for="Price50"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Price100" class="form-text text-dark"></label>
                <input asp-for="Price100" class="form-control" />
                <span class="text-danger" asp-validation-for="Price100"></span>
            </div>

            <div class="btn-group mb-2" role="group">
                <button type="submit" class="btn btn-primary m-2">Update</button>
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary m-2">Product List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}